import base64

# Read your original readable Project.pyw
with open("Project_readable.pyw", "r", encoding="utf-8") as f:
    source = f.read()

# Encode to Base64
encoded = base64.b64encode(source.encode("utf-8")).decode("utf-8")

# Build wrapper
wrapper = f"""# Project.pyw (obfuscated)
import base64
exec(base64.b64decode({encoded!r}).decode("utf-8"))
"""

# Write final obfuscated Project.pyw
with open("Project.pyw", "w", encoding="utf-8") as f:
    f.write(wrapper)

print("âœ… Obfuscated Project.pyw created")